        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:background="@drawable/ic_four"
        android:src="@drawable/rippple"/>

    <ImageView
        android:id="@+id/iv5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:background="@drawable/ic_fifth"
        android:src="@drawable/rippple"/>

    <ImageView
        android:id="@+id/iv6"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"
